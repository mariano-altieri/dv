include config

doctype
html.no-js
  head
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge' )
    title
        block title
    meta( name='description', content='' )
    meta( name='viewport', content='width=device-width, initial-scale=1' )
    
    if MDL
        link( href='https://storage.googleapis.com/code.getmdl.io/1.0.6/material.indigo-pink.min.css' rel='stylesheet' type='text/css' )
        link( rel='stylesheet', href='#{Statics}' )
        script( src="https://storage.googleapis.com/code.getmdl.io/1.0.6/material.min.js" )
    else
        link( rel='stylesheet', href='#{Statics}styles/mui.css' )
        script( src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" )
        
    if GoogleFonts
        link( href='//fonts.googleapis.com/css?family=' + GoogleFonts, rel='stylesheet', type='text/css' )
    
block body
    block content
